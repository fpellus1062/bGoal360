<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login bSales360</title>
</head>
<style>
  .azulbaculo {
    color: #23506e;
    background-color: #23506e;
    border-color: #23506e;
  }

  .bg-azulbaculo {
    color: #ffffff;
    background-color: #23506e;
  }

  @media (min-width: 1024px) {
    .h-custom-2 {
      height: 90%;
    }

    a:link,
    a:visited,
    a:active {
      text-decoration: none;
    }
  }

  .margen {
    margin-top: 130px;
  }

  .margen-bottom {
    margin-bottom: 90px;
  }

  .message-box h1 {
    color: #252932;
    font-size: 80px;
    font-weight: 600;
    line-height: 98px;
    text-shadow: rgba(61, 61, 61, 0.3) 1px 1px, rgba(61, 61, 61, 0.2) 2px 2px, rgba(61, 61, 61, 0.3) 3px 3px;
  }
</style>


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
  integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
<script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.6.3.slim.min.js"
  integrity="sha256-ZwqZIVdD3iXNyGHbSYdsmWP//UBokj2FHAxKuSBKDSo=" crossorigin="anonymous"></script>

<body>
  <div class="container-fluid">
    <section class="vh-90">
      <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100 "> </div>
        <div class="row d-flex justify-content-center align-items-center h-100">
          <div class="col-md-9 col-lg-6 col-xl-5">

            <img src="/images/R4.png" class="img-fluid margen" index=-1 alt="Sample image">
          </div>
          <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
            <form action="/identificacion" method="POST" class="requires-validation" name="formlogin" novalidate>
              <div class="message-box">
                <h1 class="m-b-0">
                  Bienvenido !
                </h1>
              </div>
              <!-- Email input -->
              <div class="form-outline mb-4">
                <input type="email" id="idusuario" name="idusuario" class="form-control form-control-lg"
                  placeholder="Usuario" />
                <label class="form-label" for="idusuario">Correo Electrónico</label>
              </div>

              <!-- Password input -->
              <div class="form-outline mb-3">
                <input type="password" id="idpassword" name="idpassword" class="form-control form-control-lg"
                  placeholder="Introduce la Contraseña" />
                <label class="form-label" for="idpassword">Contraseña</label>
              </div>

              <div class="d-flex justify-content-between align-items-center">
                <button type="submmit" class="btn btn-primary btn-lg"
                  style="padding-left: 2.5rem; padding-right: 2.5rem;">Login</button>
                <a href="#" id="forgotpassword" name="forgotpassword">¿Olvidaste la Contraseña?</a>
              </div>
            </form>
          </div>
        </div>
        <div class="row margen-bottom justify-content-center align-items-center h-100"> </div>
      </div>
      <div
        class="d-flex flex-column flex-md-row text-center text-md-start justify-content-between py-4 px-4 px-xl-5 bg-azulbaculo">
        <!-- Copyright -->
        <div class="text-white mb-3 mb-md-0">
          Copyright © 2022. Todos los derechos reservados.
        </div>
        <!-- Copyright -->

        <!-- Right -->
        <div>
          <a href="https://www.baculo360.es" class="text-white me-4">
            <i class='bx bx-world'></i> baculo360 s.l.
          </a>
        </div>
        <!-- Right -->
      </div>
    </section>
  </div>
</body>
<script>
  $(document).ready(function () {
    $('#forgotpassword').on('click', function (e) {
      e.preventDefault();
      var email = $("#idusuario").val();
      document.formlogin.action = "/forgotpassword";
      document.formlogin.submit();
    });
  })
</script>

</html>